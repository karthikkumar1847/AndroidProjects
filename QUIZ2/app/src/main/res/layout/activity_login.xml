<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="harish.quiz.Login">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edemailL"
        android:hint="Enter Email"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edtpassL"
        android:textColor="#050505"
        android:textColorHint="#908d8d" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:layout_below="@+id/edemailL"
        android:ems="10"
        android:id="@+id/edtpassL"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#010101"
        android:textColorHint="#908d8d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnloginL"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/edtpassL"
        android:layout_alignStart="@+id/btnForgPassL"
        android:layout_alignEnd="@+id/btnForgPassL"
        android:background="@drawable/login1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnForgPassL"
        android:layout_below="@+id/btnloginL"
        android:layout_centerHorizontal="true"
        android:background="@drawable/forgot_password_button" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvIncrtStmtL"
        android:textColor="#fe0101"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login to Play Quiz"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ec7114"
        android:textSize="25dp"
        android:textAlignment="center" />
</RelativeLayout>
